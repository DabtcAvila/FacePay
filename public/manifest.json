{
  "name": "FacePay - Biometric Payment Platform",
  "short_name": "FacePay",
  "description": "Secure payments with facial recognition and biometric authentication. Pay with your face in seconds.",
  "start_url": "/",
  "id": "facepay-biometric-payments",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2563eb",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["finance", "productivity", "security", "utilities"],
  "lang": "en",
  "dir": "ltr",
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+facepay",
      "url": "/pay?data=%s"
    }
  ],
  "handle_links": "preferred",

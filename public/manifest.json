  "screenshots": [
    {
      "src": "/screenshot-mobile-home.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "FacePay mobile home with biometric authentication ready"
    },
    {
      "src": "/screenshot-mobile-scan.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Face scanning interface for secure payments"
    },
    {
      "src": "/screenshot-mobile-payment.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Quick payment interface with biometric confirmation"
    },
    {
      "src": "/screenshot-desktop-dashboard.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "FacePay desktop dashboard with payment analytics"
    }
  ],
  "shortcuts": [
    {
      "name": "Face Scan Pay",
      "short_name": "Face Pay",
      "description": "Pay instantly with facial recognition",
      "url": "/m?action=face-scan",
      "icons": [
        {
          "src": "/shortcut-face-scan-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Quick Payment",
      "short_name": "Quick Pay",
      "description": "Start a quick biometric payment",
      "url": "/payments",
      "icons": [
        {
          "src": "/shortcut-pay-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "QR Scanner",
      "short_name": "QR Scan",
      "description": "Scan QR codes for payment",
      "url": "/scan",
      "icons": [
        {
          "src": "/shortcut-qr-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Payment History",
      "short_name": "History",
      "description": "View your payment history",
      "url": "/history",
      "icons": [
        {
          "src": "/shortcut-history-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  "file_handlers": [
    {
      "action": "/payments/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "receipt",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  "offline_urls": [
    "/",
    "/m",
    "/offline",
    "/dashboard",
    "/history"
  ],
  "features": [
    "biometric-authentication",
    "offline-support",
    "push-notifications",
    "background-sync",
    "camera-access",
    "secure-payments"
  ]
}